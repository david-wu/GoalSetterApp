<!DOCTYPE html>
<html>
<head>
  <title>Goals App</title>
</head>
<body>
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= link_to "Sign Up", new_user_url%>
<%= link_to "Sign In", new_session_url%>
<%= link_to "Goals", goals_url%>

<% if logged_in? %>
  Logged in as <%= link_to current_user.username, user_url(current_user.id) %>
  <%= button_to "Sign Out", session_url, method: :delete %>
<% end %>

<%= yield %>

</body>
</html>
